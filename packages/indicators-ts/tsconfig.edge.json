{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "outDir": "dist/edge",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "lib": ["ES2020"],
    "types": [],
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "**/__tests__/**"]
}
